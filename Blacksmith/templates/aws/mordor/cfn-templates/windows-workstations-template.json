{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters" : {
        "Owner": {
            "Description": "Enter Team or Individual Name Responsible for the Stack.",
            "Type": "String",
            "Default": "Roberto Rodriguez"
        },
        "NetworkStackName": {
            "Description": "Name of the active CloudFormation stack that contains the networking resources, such as the subnet and security group, that will be used in this stack.",
            "Type": "String",
            "MinLength" : 1,
            "MaxLength" : 255,
            "AllowedPattern" : "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default" : "MordorNetworkStack"
        },
        "DCStackName": {
            "Description": "Name of the active CloudFormation stack that contains the Domain Controller resources, such as the subnet and security group, that will be used in this stack.",
            "Type": "String",
            "MinLength" : 1,
            "MaxLength" : 255,
            "AllowedPattern" : "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default" : "MordorWindowsDCStack"
        },
        "KeyName": {
            "Description" : "Name of an existing EC2 key pair for SSH access to the EC2 instance.",
            "Type" : "AWS::EC2::KeyPair::KeyName",
            "ConstraintDescription" : "must be the name of an existing EC2 KeyPair."
        },
        "WorkstationInstanceType" : {
            "Description" : "Active directory server EC2 instance type.",
            "Type" : "String",
            "Default" : "t2.medium",
            "AllowedValues" : [ "t2.medium", "t2.large", "t2.xlarge", "t2.2xlarge" ]
        },
        "HRNetBIOSName" : {
            "Description" : "NetBIOS name of the HR workstation (up to 15 characters).",
            "Type" : "String",
            "Default" : "HR001",
            "AllowedPattern" : "[a-zA-Z0-9\\-]+",
            "MaxLength" : "15",
            "MinLength" : "3"
        },
        "ITNetBIOSName" : {
            "Description" : "NetBIOS name of the IT workstation (up to 15 characters).",
            "Type" : "String",
            "Default" : "IT001",
            "AllowedPattern" : "[a-zA-Z0-9\\-]+",
            "MaxLength" : "15",
            "MinLength" : "3"
        },
        "ACCTNetBIOSName" : {
            "Description" : "NetBIOS name of the ACCT workstaions (up to 15 characters).",
            "Type" : "String",
            "Default" : "ACCT001",
            "AllowedPattern" : "[a-zA-Z0-9\\-]+",
            "MaxLength" : "15",
            "MinLength" : "3"
        },
        "WECNetBIOSName" : {
            "Description" : "NetBIOS name of the WEC server (up to 15 characters).",
            "Type" : "String",
            "Default" : "WECServer",
            "AllowedPattern" : "[a-zA-Z0-9\\-]+",
            "MaxLength" : "15",
            "MinLength" : "3"
        },
        "HRPrivateIP" : {
            "Description" : "Fixed private IP for the HR workstation.",
            "Type" : "String",
            "AllowedPattern" : "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
        },
        "ITPrivateIP" : {
            "Description" : "Fixed private IP for the IT workstation.",
            "Type" : "String",
            "AllowedPattern" : "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
        },
        "ACCTPrivateIP" : {
            "Description" : "Fixed private IP for the ACCT workstation.",
            "Type" : "String",
            "AllowedPattern" : "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
        },
        "LocalAdminPassword" : {
            "Description" : "Password for the Local Administrator. Must be at least 8 characters containing letters, numbers and symbols.",
            "Type" : "String",
            "AllowedPattern" : "(?=^.{6,255}$)((?=.*\\d)(?=.*[A-Z])(?=.*[a-z])|(?=.*\\d)(?=.*[^A-Za-z0-9])(?=.*[a-z])|(?=.*[^A-Za-z0-9])(?=.*[A-Z])(?=.*[a-z])|(?=.*\\d)(?=.*[A-Z])(?=.*[^A-Za-z0-9]))^.*",
            "MaxLength" : "32",
            "MinLength" : "5",
            "NoEcho" : "true"
        },
        "DomainAdminPassword" : {
            "Description" : "Password for the domain admin user. Must be at least 8 characters containing letters, numbers and symbols.",
            "Type" : "String",
            "AllowedPattern" : "(?=^.{6,255}$)((?=.*\\d)(?=.*[A-Z])(?=.*[a-z])|(?=.*\\d)(?=.*[^A-Za-z0-9])(?=.*[a-z])|(?=.*[^A-Za-z0-9])(?=.*[A-Z])(?=.*[a-z])|(?=.*\\d)(?=.*[A-Z])(?=.*[^A-Za-z0-9]))^.*",
            "MaxLength" : "32",
            "MinLength" : "5",
            "NoEcho" : "true"
        },
        "DomainAdminUser" : {
            "Description" : "User name for the account that will be added as Domain Administrator. This is separate from the default Administrator account.",
            "Type" : "String",
            "AllowedPattern" : "[a-zA-Z0-9]*",
            "MaxLength" : "25",
            "MinLength" : "5"
        },
        "HR001DefaultUser" : {
            "Description" : "Default logon user for HR001",
            "Type" : "String",
            "AllowedPattern" : "[a-zA-Z0-9]*",
            "MaxLength" : "25",
            "MinLength" : "5"
        },
        "HR001DefaultPassword" : {
            "Description" : "Default password for default user on HR001",
            "Type" : "String",
            "MaxLength" : "32",
            "MinLength" : "5",
            "NoEcho" : "true"
        },
        "IT001DefaultUser" : {
            "Description" : "Default logon user for ITR001",
            "Type" : "String",
            "AllowedPattern" : "[a-zA-Z0-9]*",
            "MaxLength" : "25",
            "MinLength" : "5"
        },
        "IT001DefaultPassword" : {
            "Description" : "Default password for default user on IT001",
            "Type" : "String",
            "MaxLength" : "32",
            "MinLength" : "5",
            "NoEcho" : "true"
        },
        "ACCT001DefaultUser" : {
            "Description" : "Default logon user for ACCT001",
            "Type" : "String",
            "AllowedPattern" : "[a-zA-Z0-9]*",
            "MaxLength" : "25",
            "MinLength" : "5"
        },
        "ACCT001DefaultPassword" : {
            "Description" : "Default password for default user on ACCT001",
            "Type" : "String",
            "MaxLength" : "32",
            "MinLength" : "5",
            "NoEcho" : "true"
        },
        "DomainDNSName" : {
            "Description" : "Fully qualified domain name (FQDN) of the forest root domain e.g. example.com.",
            "Type" : "String",
            "AllowedPattern" : "[a-zA-Z0-9\\-]+\\..+",
            "MaxLength" : "25",
            "MinLength" : "2"
        },
        "EndpointAgent" : {
            "Description": "Name of endpoint agent to install. So far, Sysmon and SilkETW are the only options",
            "Type": "String",
            "AllowedValues" : [ "Sysmon", "SilkETW" ]
        }
    },
    "Mappings" : {
        "WindowsWorkstationAWSRegionArch2AMI" : {
            "us-east-1" : { "HVM64" : "ami-0954cc8e05b5ab1ba"}
        }
    },
    "Resources" : {
        "HRWindowsENI" : {
            "Type" : "AWS::EC2::NetworkInterface",
            "Properties" : {
                "GroupSet": [{ "Fn::ImportValue" :  {"Fn::Sub": "${NetworkStackName}-Windows-SecurityGroupID" } }],
                "SubnetId": { "Fn::ImportValue" : {"Fn::Sub": "${NetworkStackName}-SubnetID" } },
                "PrivateIpAddress": { "Ref" : "HRPrivateIP" }
            }
        },
        "ITWindowsENI" : {
            "Type" : "AWS::EC2::NetworkInterface",
            "Properties" : {
                "GroupSet": [{ "Fn::ImportValue" :  {"Fn::Sub": "${NetworkStackName}-Windows-SecurityGroupID" } }],
                "SubnetId": { "Fn::ImportValue" : {"Fn::Sub": "${NetworkStackName}-SubnetID" } },
                "PrivateIpAddress": { "Ref" : "ITPrivateIP" }
            }
        },
        "ACCTWindowsENI" : {
            "Type" : "AWS::EC2::NetworkInterface",
            "Properties" : {
                "GroupSet": [{ "Fn::ImportValue" :  {"Fn::Sub": "${NetworkStackName}-Windows-SecurityGroupID" } }],
                "SubnetId": { "Fn::ImportValue" : {"Fn::Sub": "${NetworkStackName}-SubnetID" } },
                "PrivateIpAddress": { "Ref" : "ACCTPrivateIP" }
            }
        },
        "HRWKS" : {
            "Type" : "AWS::EC2::Instance",
            "Metadata": {
                "AWS::CloudFormation::Init": {
                    "configSets": {
                        "config": [ "00-setup", "01-install", "02-finalize" ]
                    },
                    "00-setup": {
                        "files": {
                            "c:\\cfn\\cfn-hup.conf": {
                                "content": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "[main]\n",
                                            "stack=", { "Ref" : "AWS::StackId" }, "\n",
                                            "region=", { "Ref" : "AWS::Region" }, "\n"
                                        ]
                                    ]
                                }
                            },
                            "c:\\cfn\\hooks.d\\cfn-auto-reloader.conf": {
                                "content": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "[cfn-auto-reloader-hook]\n",
                                            "triggers=post.update\n",
                                            "path=Resources.HRWKS.Metadata.AWS::CloudFormation::Init\n",
                                            "action=cfn-init.exe -v -c config -s ", { "Ref" : "AWS::StackId" },
                                            " --r HRWKS",
                                            " --region ", { "Ref" : "AWS::Region" }, "\n"
                                        ]
                                    ]
                                }
                            },
                            "c:\\cfn\\scripts\\Prepare-Box.ps1": {
                                "source": "https://raw.githubusercontent.com/hunters-forge/Blacksmith/master/templates/aws/mordor/cfn-files/scripts/default/Prepare-Box.ps1"
                            },
                            "c:\\cfn\\scripts\\Set-StaticIP.ps1": {
                                "source": "https://raw.githubusercontent.com/hunters-forge/Blacksmith/master/templates/aws/mordor/cfn-files/scripts/default/Set-StaticIP.ps1"
                            },
                            "c:\\cfn\\scripts\\Rename-Computer.ps1": {
                                "source": "https://raw.githubusercontent.com/hunters-forge/Blacksmith/master/templates/aws/mordor/cfn-files/scripts/default/Rename-Computer.ps1"
                            },
                            "c:\\cfn\\scripts\\Set-Auditing.ps1": {
                                "source": "https://raw.githubusercontent.com/hunters-forge/Blacksmith/master/templates/aws/mordor/cfn-files/scripts/default/Set-Auditing.ps1"
                            },
                            "c:\\cfn\\scripts\\Install-Endpoint-Agent.ps1": {
                                "source": "https://raw.githubusercontent.com/hunters-forge/Blacksmith/master/templates/aws/mordor/cfn-files/scripts/default/Install-Endpoint-Agent.ps1"
                            },
                            "c:\\cfn\\scripts\\Join-Domain.ps1": {
                                "source": "https://raw.githubusercontent.com/hunters-forge/Blacksmith/master/templates/aws/mordor/cfn-files/scripts/default/Join-Domain.ps1"
                            }
                        },
                        "services": {
                            "windows": {
                                "cfn-hup": {
                                    "enabled": "true",
                                    "ensureRunning": "true",
                                    "files": [
                                        "c:\\cfn\\cfn-hup.conf",
                                        "c:\\cfn\\hooks.d\\cfn-auto-reloader.conf"
                                    ]
                                }
                            }
                        },
                        "commands": {
                            "a-set-prepare-box": {
                                "command": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "powershell.exe -ExecutionPolicy RemoteSigned -Command c:\\cfn\\scripts\\Prepare-Box.ps1",
                                            " -LocalAdminPassword ", { "Ref" : "LocalAdminPassword" }
                                        ]
                                    ]
                                },
                                "waitAfterCompletion": "0"
                            },
                            "b-set-static-ip": {
                                "command": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "powershell.exe -ExecutionPolicy RemoteSigned -Command c:\\cfn\\scripts\\Set-StaticIP.ps1",
                                            " -ServerAddresses ", { "Fn::ImportValue" : {"Fn::Sub": "${DCStackName}-DCPrivateIp" } }
                                        ]
                                    ]
                                },
                                "waitAfterCompletion": "10"
                            },
                            "c-rename-computer-reboot": {
                                "command": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "powershell.exe -ExecutionPolicy RemoteSigned -Command c:\\cfn\\scripts\\Rename-Computer.ps1",
                                            " -NewComputerName ", { "Ref" : "HRNetBIOSName" },
                                            " -reboot"
                                        ]
                                    ]
                                },
                                "waitAfterCompletion": "forever"
                            },
                            "d-join-domain": {
                                "command": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "powershell.exe -ExecutionPolicy RemoteSigned -Command c:\\cfn\\scripts\\Join-Domain.ps1",
                                            " -ComputerName ", { "Ref" : "HRNetBIOSName" },
                                            " -OU \"Workstations\"",
                                            " -DomainAdminUser ", { "Ref" : "DomainAdminUser" },
                                            " -DomainAdminPassword ", { "Ref" : "DomainAdminPassword" },
                                            " -DefaultLogonUser ", { "Ref" : "HR001DefaultUser" },
                                            " -DefaultLogonPassword ", { "Ref" : "HR001DefaultPassword" },
                                            " -DomainDNSName ", { "Ref" : "DomainDNSName" }  
                                        ]
                                    ]
                                },
                                "waitAfterCompletion": "forever"
                            }
                        }
                    },
                    "01-install": {
                        "commands": {
                            "a-install-endpoint-agent": {
                                "command": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "powershell.exe -ExecutionPolicy RemoteSigned -Command c:\\cfn\\scripts\\Install-Endpoint-Agent.ps1",
                                            " -EndpointAgent ", { "Ref" : "EndpointAgent" }
                                        ]
                                    ]
                                },
                                "waitAfterCompletion": "0"
                            },
                            "b-set-auditing": {
                                "command": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "powershell.exe -ExecutionPolicy RemoteSigned -Command c:\\cfn\\scripts\\Set-Auditing.ps1",
                                            " -DomainDNSName ", { "Ref" : "DomainDNSName" },
                                            " -WECNetBIOSName ", { "Ref" : "WECNetBIOSName" }
                                        ]
                                    ]
                                },
                                "waitAfterCompletion": "forever"
                            }
                        }
                    },
                    "02-finalize": {
                        "commands": {
                            "a-signal-success": {
                                "command": {
                                    "Fn::Join": ["", [ "cfn-signal.exe -e %ERRORLEVEL% --resource HRWKS --stack ", { "Ref": "AWS::StackName" } ]]
                                },
                                "waitAfterCompletion": "0"
                            }
                        }
                    }
                }
            },
            "Properties" : {
                "InstanceType" : { "Ref" : "WorkstationInstanceType" },
                "ImageId" : { "Fn::FindInMap" : [ "WindowsWorkstationAWSRegionArch2AMI", { "Ref" : "AWS::Region" }, "HVM64" ] },
                "KeyName" : { "Ref" : "KeyName" },
                "NetworkInterfaces" : [
                    {
                        "NetworkInterfaceId" : { "Ref" : "HRWindowsENI" },
                        "DeviceIndex": "0"
                    }
                ],
                "BlockDeviceMappings" : [
                    {
                        "DeviceName" : "/dev/sda1",
                        "Ebs" : {
                            "DeleteOnTermination" : "true",
                            "VolumeSize" : "50"
                        }
                    }
                ],
                "UserData" : {
                    "Fn::Base64" : { 
                        "Fn::Join" : [
                            "\n", 
                            [
                                "<script>",
                                "wmic product where \"description='aws-cfn-bootstrap' \" uninstall ",
                                "start /wait c:\\Windows\\system32\\msiexec /passive /qn /i https://s3.amazonaws.com/cloudformation-examples/aws-cfn-bootstrap-win64-latest.msi",
                                { "Fn::Sub" : "\"c:\\Program Files\\Amazon\\cfn-bootstrap\\cfn-init.exe\" -v -c config -s ${AWS::StackName} --resource HRWKS --region ${AWS::Region} " },
                                "</script>"
                            ]
                        ]
                    }
                }
            },
            "CreationPolicy": {
                "ResourceSignal": {
                    "Count": "1",
                    "Timeout": "PT20M"
                }
            }
        },
